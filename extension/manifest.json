{
  "manifest_version": 3,
  "name": "Kitsune-DM",
  "version": "1.0",
  "description": "Download Manager Integration for Kitsune-DM",
  "permissions": [
    "nativeMessaging",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kitsune-DM Status"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  }
}